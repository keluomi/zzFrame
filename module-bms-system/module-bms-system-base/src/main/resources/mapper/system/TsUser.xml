    <!-- 删除用户 -->
    <delete id="delete" parameterType="com.zz.bms.system.base.entity.TsUserEntity">
        DELETE FROM ts_user
        <include refid="TsUserDeleteFilter"/>
    </delete>
	<update id="deleteById">
		update FROM ts_user set delete_flag = '1'  where id = #{id} <if test="rbac != null"> and( ${rbac} )</if>
	</update>
	<update id="deleteByIds" parameterType="com.zz.bms.system.base.entity.TsUserEntity">
		update FROM ts_user set delete_flag = '1' where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
		<if test="rbac != null"> and( ${rbac} )</if>
	</update>



	<!-- 删除机构 物理-->
	<delete id="deleteForce" parameterType="com.zz.bms.system.base.entity.TsUserEntity">
		delete FROM ts_user
		<include refid="TsUserDeleteFilter"/>
	</delete>
	<delete id="deleteForceById" >
		delete FROM ts_user  where id = #{id} <if test="rbac != null"> and( ${rbac} )</if>
	</delete>
	<delete id="deleteForceByIds" parameterType="com.zz.bms.system.base.entity.TsUserEntity">
		delete FROM ts_user where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
		<if test="rbac != null"> and( ${rbac} )</if>
	</delete>

