		<include refid="TsUser4CheckQueryFilter"/>  limit 1
	</select>

	<select id="findById" parameterType="java.lang.String" resultMap="TsUserResultMap">
		SELECT T.* FROM ts_user T where id = #{id}
		<if test="rbac != null"> and( ${rbac} )</if>
	</select>

    <!-- 根据条件查询保存用户列表 -->
