		id,
		user_name,
		login_name,
		login_password,
		salt,
		status,
		lead_id,
		phone,
		email,
		avatar_url,
		open_id,
		union_id,
		system_admin,
		dep_id,
		organ_id,
		remark,
		delete_flag,
		create_user_id,
