        SELECT T.* FROM ts_user T
        <include refid="TsUserQueryFilter"/>  limit 1
    </select>


	<!-- 根据条件查询第一条用户 -->
	<select id="findTopOne4Check" parameterType="com.zz.bms.system.base.entity.TsUserEntity" resultMap="TsUserResultMap">
