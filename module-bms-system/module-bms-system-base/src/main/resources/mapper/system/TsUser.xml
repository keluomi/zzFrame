	 <!-- 更新配置 -->
	<sql id="TsUserSetFilter">
		<set>
				<if test="id != null"> T.id = #{id}, </if>

				<if test="userName != null"> T.user_name = #{userName}, </if>

				<if test="loginName != null"> T.login_name = #{loginName}, </if>

				<if test="loginPassword != null"> T.login_password = #{loginPassword}, </if>

				<if test="salt != null"> T.salt = #{salt}, </if>

				<if test="status != null"> T.status = #{status}, </if>

				<if test="leadId != null"> T.lead_id = #{leadId}, </if>

				<if test="phone != null"> T.phone = #{phone}, </if>

				<if test="email != null"> T.email = #{email}, </if>

